<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="errors">
 <p class="er"><strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong></p>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
</div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="eT">
  <label>Title</label><br>
  <div><%= f.text_field :title %></div>
  </div>
  
    <label>Body</label><br>
    <%= f.text_area :body %>
  
  <h4><%= f.submit 'Update Book' %></>
  
  <h4>
    <%= link_to "Show", book_path(@book.id) %> |
    <%= link_to "Back", "/books" %>
  </h4>
  
<% end %>